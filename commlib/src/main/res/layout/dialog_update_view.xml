<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
		>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_marginLeft="@dimen/dp25"
			android:layout_marginRight="@dimen/dp25"
			android:layout_centerInParent="true"
			android:layout_height="@dimen/dp450"
			android:background="@drawable/shape_dialog_bg_white">

		<ImageView
				android:id="@+id/iv_exit"
				android:layout_width="@dimen/dp14"
				android:layout_height="@dimen/dp14"
				android:layout_marginTop="@dimen/dp20"
				android:layout_marginRight="@dimen/dp20"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:visibility="visible"
				android:src="@drawable/ic_exit"/>


		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@id/iv_exit"
				android:gravity="center_horizontal"
				android:layout_marginTop="@dimen/dp10"
				android:orientation="vertical">
			<ImageView
					android:layout_width="@dimen/dp105"
					android:layout_height="@dimen/dp50"
					android:src="@drawable/besr_logo"/>

			<TextView
					android:id="@+id/tv_version"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="V1.1gengxin内容"
					android:layout_marginTop="@dimen/dp5"
					android:textColor="#B2333333"
					android:textSize="@dimen/sp14"
					android:textStyle="bold"/>


			<android.support.v4.widget.NestedScrollView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_marginBottom="@dimen/dp13"
					android:layout_marginTop="@dimen/dp25"
					android:layout_weight="1"
					android:fadeScrollbars="false"
					android:overScrollMode="ifContentScrolls"
					android:scrollbars="vertical">

				<TextView
						android:id="@+id/tv_content"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp15"
						android:layout_marginRight="@dimen/dp15"
						android:gravity="top"
						android:lineSpacingMultiplier="1.4"
						android:textColor="#666666"
						android:textSize="@dimen/sp14"
						tools:text="坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷坎坎坷坷"/>
			</android.support.v4.widget.NestedScrollView>


			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					>

				<TextView
						android:id="@+id/tv_update"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/dp25"
						android:layout_marginLeft="@dimen/dp25"
						android:layout_marginRight="@dimen/dp25"
						android:background="@drawable/bg_conner_theme_color_selector"
						android:gravity="center"
						android:paddingBottom="@dimen/dp12"
						android:paddingTop="@dimen/dp12"
						android:text="立即更新"
						android:textColor="#FFFFFFFF"
						android:textSize="@dimen/sp14"
						android:visibility="visible"/>

				<com.imgod1.commlib.common.NumberProgressBar
						android:id="@+id/loading"
						style="@style/NumberProgressBar_Relax_Blue_Style"
						android:layout_width="match_parent"
						android:visibility="gone"
						android:layout_marginBottom="@dimen/dp25"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dp25"
						android:layout_marginRight="@dimen/dp25"
						android:layout_marginTop="@dimen/dp15"/>
			</RelativeLayout>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>